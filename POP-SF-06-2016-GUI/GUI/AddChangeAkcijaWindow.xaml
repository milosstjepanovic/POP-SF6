<Window x:Class="POP_SF_06_2016_GUI.GUI.AddChangeAkcijaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_06_2016_GUI.GUI"
        mc:Ignorable="d"
        Title="AddChangeAkcijaWindow" Height="325.6" Width="365.067" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Popust:" HorizontalAlignment="Left" Margin="45,55,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="163,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" 
                 Name="tbPopust" Text="{Binding Path=Popust}"/>
        <Label Content="Datum pocetka:" HorizontalAlignment="Left" Margin="45,86,0,0" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="163,88,0,0" VerticalAlignment="Top" Width="134" 
                    Name="dpDatumPocetka" Text="{Binding Path=DatumPocetka,StringFormat=dd/MM/yyyy}"/>
        <Label Content="Datum zavrsetka:" HorizontalAlignment="Left" Margin="45,117,0,0" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="163,119,0,0" VerticalAlignment="Top" Width="134" 
                    Name="dpDatumZavrsetka" Text="{Binding Path=DatumZavrsetka,StringFormat=dd/MM/yyyy}"/>
        <Label Content="Namestaj:" HorizontalAlignment="Left" Margin="45,148,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="163,151,0,0" VerticalAlignment="Top" Width="134" Name="cmbNamestaj"
                  SelectedItem="{Binding Path=NamestajPopust}"/>
        <Button Content="Sacuvaj" HorizontalAlignment="Left" Margin="64,234,0,0" VerticalAlignment="Top" Width="75" Name="btnSacuvaj"
                Click="btnSacuvaj_Click"/>
        <Button Content="Odustani" HorizontalAlignment="Left" Margin="205,234,0,0" VerticalAlignment="Top" Width="75" Name="btnOdustani" 
                Click="btnOdustani_Click"/>
        


    </Grid>
</Window>
