<Window x:Class="POP_SF_06_2016_GUI.GUI.KorisnikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_06_2016_GUI.GUI"
        mc:Ignorable="d"
        Title="KorisnikWindow" Height="373.2" Width="537" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="278*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="dgKorisnik" HorizontalAlignment="Left" VerticalAlignment="Top" Height="269" Width="518" 
                  AutoGenerateColumns="True" AutoGeneratingColumn="dgKorisnik_AutoGeneratingColumn" IsReadOnly="True" CanUserAddRows="False"
                  SelectedItem="{Binding Path=IzabraniKorisnik}"/>
        <Button Grid.Row="1" Width="85" HorizontalAlignment="Left" Name="btnDodajKorisnika" 
                Click="btnDodajKorisnika_Click" Margin="0,13.6,0,14.2">Dodaj korisnika</Button>
        <Button Grid.Row="1" Width="88" HorizontalAlignment="Left" Margin="100,12.6,0,15.2" 
                Name="btnIzmeniKorisnika" Click="btnIzmeniKorisnika_Click">Izmeni korisnika</Button>
        <Button Grid.Row="1" Width="85" HorizontalAlignment="Left" Margin="207,12.6,0,15.2" 
                Name="btnObrisiKorisnika" Click="btnObrisiKorisnika_Click">Obrisi korisnika</Button>
        <Button Grid.Row="1" Width="73" HorizontalAlignment="Right" Margin="0,12.6,10.4,15.2" 
                Name="btnIzlaz" Click="btnIzlaz_Click">Izlaz</Button>
    </Grid>
</Window>
